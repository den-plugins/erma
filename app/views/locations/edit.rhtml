<%= render :partial => '/admin/menu' %>

<h2><%= html_title(l(:label_erma_update, :tab => 'Location')) %></h2>
<% labelled_tabular_form_for :location, @location, :url => { :action => "update", :id => @location.id } do |f| %>

<%= error_messages_for 'location' %>

<div class="box">
  <p><%= f.text_field :name, :required => true %><br /><em><%= l(:text_caracters_maximum, 30) %></em></p>
</div>
  <%= submit_tag l(:button_save) %> | <%= link_to 'Cancel', :controller => "locations" %>
<% end %>
