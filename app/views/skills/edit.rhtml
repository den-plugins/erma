<%= render :partial => '/admin/menu' %>

<h2><%= html_title(l(:label_erma_update, :tab => 'Skill')) %></h2>
<% labelled_tabular_form_for :skill, @skill, :url => { :action => "update", :id => @skill.id } do |f| %>
<%= error_messages_for 'skill' %>

<div class="box">
  <p><%= f.text_field :name, :required => true %><br /><em><%= l(:text_caracters_maximum, 30) %></em></p>
</div>
  <%= submit_tag l(:button_save) %> | <%= link_to 'Cancel', :controller => "skills" %>
<% end %>
