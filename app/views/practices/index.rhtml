<%= render :partial => '/admin/menu' %>

<div class="contextual">
    <%= link_to(l(:label_erma_new_links, :tab => 'practice'), {:controller => 'practices', :action => 'add'}, :class => 'icon icon-add') if User.current.admin? %>
</div>

<div>
  <h2><%= l(:label_erma_tab, :tab => 'Practices') %></h2>

  <div>
    <table class="list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Resources</th>
          <th></th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% for practice in @practices %>
          <%= render :partial => 'details', :locals => { :practice => practice } %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% html_title(l(:label_erma_html_title, :tab => 'Practices'))-%>
